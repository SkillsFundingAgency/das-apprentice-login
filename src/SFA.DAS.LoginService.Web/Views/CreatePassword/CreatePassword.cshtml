@model SFA.DAS.LoginService.Web.Controllers.InvitationsWeb.ViewModels.CreatePasswordViewModel

@{
    ViewBag.Title = "Create password";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <partial name="/Views/Partials/_validationErrorSummary.cshtml"/>

            <h1 class="govuk-heading-xl">Create password</h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <form asp-action="Post">
                <input type="hidden" asp-for="InvitationId" />

                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" asp-for="Password">
                        Password
                    </label>
                    <span id="password-error" asp-validation-for="Password" class="govuk-error-message"></span>
                    <input class="govuk-input govuk-input--width-10" asp-for="Password" type="password" autocomplete="new-password">
                </div>


                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" asp-for="ConfirmPassword">
                        Confirm password
                    </label>
                    <input class="govuk-input govuk-input--width-10" asp-for="ConfirmPassword" type="password" autocomplete="new-password">
                </div>

                <div class="govuk-form-group">
                  <a class="js-show-hide govuk-link" href="#">Show passwords</a>
                </div>

                <button type="submit" class="govuk-button">
                    Submit
                </button>
            </form>

        </div>
        <div class="govuk-grid-column-one-third">
            <h2 class="govuk-heading-m">Password conditions</h2>
            <ul class="govuk-list govuk-list--bullet">
                <li data-condition="minChars">Passwords must be at least 8 characters</li>
                <li data-condition="anyLetter">Passwords must have at least one letter</li>
                <li data-condition="anyNumber">Passwords must have at least one number (0 - 9)</li>
                <li data-condition="mustMatch">Passwords must match</li>
            </ul>
        </div>
    </div>
</main>
