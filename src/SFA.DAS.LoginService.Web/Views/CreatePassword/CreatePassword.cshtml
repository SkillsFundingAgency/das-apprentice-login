@model SFA.DAS.LoginService.Web.Controllers.InvitationsWeb.ViewModels.CreatePasswordViewModel

@{
    ViewBag.Title = "Create password";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            @if (!ViewData.ModelState.IsValid)
            {

                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            <li><a sfa-validation-for="Password"></a></li>
                        </ul>
                    </div>
                </div>
            }

            <h1 class="govuk-heading-xl">Create password</h1>

            <form asp-action="Post">
                <input type="hidden" asp-for="InvitationId" />

                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" asp-for="Password">
                        Password
                    </label>
                    <span id="password-error" asp-validation-for="Password" class="govuk-error-message"></span>
                    <input class="govuk-input govuk-input--width-10" asp-for="Password" type="text">
                </div>

                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" asp-for="ConfirmPassword">
                        Confirm password
                    </label>
                    <input class="govuk-input govuk-input--width-10" asp-for="ConfirmPassword" type="text">
                </div>

                <button type="submit" class="govuk-button">
                    Submit
                </button>
            </form>

            <h2 class="govuk-heading-m">Current aspnet core identity password defaults:</h2>
            <ul class="govuk-list govuk-list--bullet">
                <li>Passwords must be at least 8 characters</li>
                <li>Passwords must have at least one letter</li>
                <li>Passwords must have at least one number (0 - 9)</li>
            </ul>
        </div>
    </div>
</main>
