            <form asp-action="Post">

                <div class="govuk-form-group" sfa-validation-for="NewEmailAddress" sfa-validationerror-class="govuk-form-group--error">
                    <label class="govuk-label govuk-label--m" asp-for="NewEmailAddress">
                        New email address
                    </label>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <span id="email-error" asp-validation-for="NewEmailAddress" class="govuk-error-message"></span>
                    }
                    <input class="govuk-input" asp-for="NewEmailAddress" type="text" aria-describedby="email-address-hint" sfa-validation-for="NewEmailAddress" sfa-validationerror-class="govuk-input--error">
                </div>

                <div class="govuk-form-group" sfa-validation-for="ConfirmEmailAddress" sfa-validationerror-class="govuk-form-group--error">
                    <label class="govuk-label govuk-label--m" asp-for="ConfirmEmailAddress">
                        Re-type email address
                    </label>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <span id="email-error" asp-validation-for="ConfirmEmailAddress" class="govuk-error-message"></span>
                    }
                    <input class="govuk-input" asp-for="ConfirmEmailAddress" type="text" aria-describedby="email-address-hint" sfa-validation-for="ConfirmEmailAddress" sfa-validationerror-class="govuk-input--error">
