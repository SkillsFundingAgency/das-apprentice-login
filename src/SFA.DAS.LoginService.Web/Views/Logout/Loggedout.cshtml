@model SFA.DAS.LoginService.Application.BuildLogoutViewModel.LogoutResponse

@{
    ViewBag.Title = "Signed out";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2>You are now siged out.</h2>
            
            @if (Model.PostLogoutRedirectUri != null)
            {
                <div>
                    Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">here</a> to return to <span>@Model.ClientName</span>.
                </div>
            }
        </div>
    </div>
</main>
